<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calibrateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cal_start"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/viewDemoButton"
        android:layout_width="304dp"
        android:layout_height="57dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="56dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectButton"
        app:srcCompat="@drawable/viewdemobutton" />

    <ImageButton
        android:id="@+id/connectButton"
        android:layout_width="304dp"
        android:layout_height="57dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/viewDemoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/connectbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>