<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:backgroundTintMode="add">

    <ImageButton
        android:id="@+id/buttonInfo3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/ic_menu_info_details"
        android:backgroundTintMode="screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/carecircle"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:text="Care Circle"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/promptbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4" />

    <Switch
        android:id="@+id/bloodsugar"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"


        android:layout_marginBottom="16dp"
        android:checked="true"
        android:text="My Blood Sugar"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/insucalc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4" />

    <Switch
        android:id="@+id/insucalc"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13dp"
        android:checked="true"
        android:text="Insulin Calculator"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/prescript"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4" />

    <Switch
        android:id="@+id/prescript"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:checked="true"
        android:text="Prescriptions"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4" />

    <Switch
        android:id="@+id/library"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:text="Library"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/achievements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4" />

    <Switch
        android:id="@+id/achievements"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13dp"
        android:text="Achievements"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/carecircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="edit T1D toolbox"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/promptbutton"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:background="@color/lightred"
        android:text="edit prompts"
        app:layout_constraintBottom_toTopOf="@+id/accountbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/accountbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/gray"
        android:text="edit / add account"
        app:layout_constraintBottom_toTopOf="@+id/monitorbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/monitorbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="my monitor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout


        android:id="@+id/linearLayout4"
        android:layout_width="62dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="76dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/promptbutton"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/fingersecond" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/secondneedels" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/drugsecond" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginTop="25dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/book" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitCenter"

            app:srcCompat="@drawable/cupsecond" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/secondlink" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>